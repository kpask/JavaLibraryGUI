<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="biblioteka.gui.controller.MyBorrowedBooksController">
    <top>
        <Text text="My Borrowed Books" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </BorderPane.margin>
        </Text>
    </top>
    <bottom>
        <BorderPane prefHeight="60.0">
            <left>
                <Button fx:id="backButton" onAction="#onBackButtonPress" text="Back" prefWidth="80" BorderPane.alignment="CENTER_LEFT">
                    <BorderPane.margin>
                        <Insets left="10.0" bottom="10.0"/>
                    </BorderPane.margin>
                </Button>
            </left>
        </BorderPane>
    </bottom>
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="120.0" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets right="10.0" top="10.0" bottom="10.0" left="5.0"/>
            </BorderPane.margin>
            <padding>
                <Insets top="20.0"/>
            </padding>
            <Button fx:id="returnMyBookButton" onAction="#onReturnMyBookButtonPressed" text="Return Selected" prefWidth="110.0"/>
        </VBox>
    </right>
    <center>
        <TableView fx:id="myBookTable" prefHeight="350.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="150.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="120.0" text="Author" />
                <TableColumn fx:id="isbnColumn" prefWidth="110.0" text="ISBN" />
                <TableColumn fx:id="yearColumn" prefWidth="60.0" text="Year" />
                <TableColumn fx:id="pageCountColumn" prefWidth="80.0" text="Pages (sk)" />
                <TableColumn fx:id="genreColumn" prefWidth="90.0" text="Genre" />
                <TableColumn fx:id="languageColumn" prefWidth="80.0" text="Language" />
                <TableColumn fx:id="publisherColumn" prefWidth="100.0" text="Publisher" />
                <!-- No BorrowedBy column needed here -->
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets left="10.0" top="10.0" bottom="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>